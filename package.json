{
  "name": "ts-init",
  "version": "0.0.0",
  "description": "Starting point for TypeScript projects",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "engines": {
    "node": "^12 || ^14 || >=16",
    "npm": ">=7"
  },
  "scripts": {
    "build": "run-s clean compile",
    "clean": "tsc --build --clean",
    "compile": "tsc --build",
    "coverage": "run-s -c tap tap-coverage",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx --fix .",
    "lint": "run-s eslint prettier",
    "prettier": "prettier --loglevel warn -w .",
    "prepare": "husky install",
    "preversion": "npm test",
    "spec": "run-s build tap",
    "test": "run-s lint spec",
    "tap": "tap -R spec --ts test",
    "tap-coverage": "tap --coverage-report html",
    "watch": "tsc --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@tsconfig/node12": "^1.0.9",
    "@types/node": "^17.0.18",
    "@types/tap": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "tap": "^15.1.6",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  }
}
